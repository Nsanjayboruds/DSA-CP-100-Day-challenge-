{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 Build Active File",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug build for single file"
        },
        {
            "label": "Build All in Array Directory",
            "type": "shell",
            "command": "make",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/array"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Debug Version",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/array"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Release Version",
            "type": "shell",
            "command": "make",
            "args": ["release"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/array"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "make",
            "args": ["test"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/array"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/array"
            }
        },
        {
            "label": "Static Analysis",
            "type": "shell",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--suppress=missingIncludeSystem",
                "${workspaceFolder}/array"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Build with Address Sanitizer",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-g",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_sanitized"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build with address and undefined behavior sanitizers"
        }
    ]
}
